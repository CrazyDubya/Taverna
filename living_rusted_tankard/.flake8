[flake8]
max-line-length = 120
exclude = .git,__pycache__,.venv,venv,build,dist,.mypy_cache,.pytest_cache,docs,old,archive
# E203: whitespace before ':' (Black compatibility)
# W503: line break before binary operator (Black compatibility)
ignore = E203,W503
max-complexity = 10
per-file-ignores =
    __init__.py:F401,F403
    */tests/*:F841
